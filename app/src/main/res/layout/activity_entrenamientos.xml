<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Imagen -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Icono entrenamiento"
            android:layout_marginBottom="16dp" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrenamientos"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="4dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rutinas recomendadas para ti"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingBottom="24dp" />

        <!-- Cardio básico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textCardio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cardio básico"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnDesplegarCardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedorCardio"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_height="200dp">

            <WebView
                android:id="@+id/webViewCardio"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <Button
                android:id="@+id/btnCompletarCardio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcar como completado"/>
        </LinearLayout>

        <!-- Fuerza en casa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textFuerza"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Fuerza en casa"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnDesplegarFuerza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedorFuerza"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_height="200dp">

            <WebView
                android:id="@+id/webViewFuerza"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <Button
                android:id="@+id/btnCompletarFuerza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcar como completado"/>
        </LinearLayout>

        <!-- Estiramientos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textEstiramientos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Estiramientos"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnDesplegarEstiramientos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedorEstiramientos"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_height="200dp">

            <WebView
                android:id="@+id/webViewEstiramientos"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <Button
                android:id="@+id/btnCompletarEstiramientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcar como completado"/>
        </LinearLayout>

        <!-- Barra de progreso correctamente ubicada -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="66"
            android:max="100"
            android:progressTint="#1976D2"
            android:layout_marginBottom="24dp" />

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</ScrollView>
