<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo o imagen -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Logo de ejercicios"
            android:layout_marginBottom="16dp" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicios"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="4dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explora tu rutina de ejercicios"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingBottom="24dp" />

        <!-- Lista de ejercicios con íconos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sentadillas"
            android:textSize="18sp"
            android:textColor="#000000"
            android:drawableStart="@android:drawable/arrow_down_float"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:contentDescription="Ejercicio Sentadillas" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flexiones"
            android:textSize="18sp"
            android:textColor="#000000"
            android:drawableStart="@android:drawable/arrow_down_float"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:contentDescription="Ejercicio Flexiones" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abdominales"
            android:textSize="18sp"
            android:textColor="#000000"
            android:drawableStart="@android:drawable/arrow_down_float"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:contentDescription="Ejercicio Abdominales" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zancadas"
            android:textSize="18sp"
            android:textColor="#000000"
            android:drawableStart="@android:drawable/arrow_down_float"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:contentDescription="Ejercicio Zancadas" />

        <!-- Progreso -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progreso de hoy: 3/5 ejercicios"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="60"
            android:max="100"
            android:progressTint="#1976D2"
            android:layout_marginBottom="24dp" />

        <!-- Botón iniciar rutina -->
        <Button
            android:id="@+id/btnIniciarRutina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar rutina"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button" />

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</ScrollView>
