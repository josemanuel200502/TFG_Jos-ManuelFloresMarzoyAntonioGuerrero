<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Ícono alimentos"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de Alimentos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="16dp" />

        <!-- Sección de comidas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desayuno: Avena y frutas"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Almuerzo: Ensalada + Pollo"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cena: Sopa y pan integral"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snacks: Yogur"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Calorías totales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorías hoy: 1,750 kcal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="24dp" />

        <!-- Botón agregar alimento -->
        <Button
            android:id="@+id/btnAgregarAlimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar alimento"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button" />

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</ScrollView>
