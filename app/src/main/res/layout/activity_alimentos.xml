<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Ícono alimentos"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de Alimentos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="16dp" />

        <!-- Campo de entrada para alimentos -->
        <EditText
            android:id="@+id/inputAlimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del alimento"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/inputCalorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calorías"
            android:textSize="16sp"
            android:padding="8dp"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <!-- Lista de alimentos guardados -->
        <TextView
            android:id="@+id/txtListaAlimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No has registrado alimentos aún."
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="16dp"/>

        <!-- Calorías totales -->
        <TextView
            android:id="@+id/txtTotalCalorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorías hoy: 0 kcal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="24dp"/>

        <!-- Botón agregar alimento -->
        <Button
            android:id="@+id/btnAgregarAlimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar alimento"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="16dp"/>

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnBackAlimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>
</ScrollView>
